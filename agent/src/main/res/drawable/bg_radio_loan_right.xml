<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_checked="true">
    <shape android:shape="rectangle">
      <stroke android:color="@color/header_color"
        android:width="@dimen/size_1dp"/>
      <corners android:bottomRightRadius="@dimen/size_5dp"
        android:topRightRadius="@dimen/size_5dp"/>
      <solid android:color="@color/header_color"/>
    </shape>
  </item>

  <item android:state_selected="true">
    <shape android:shape="rectangle">
      <stroke android:color="@color/header_color"
        android:width="@dimen/size_1dp"/>
      <corners android:bottomRightRadius="@dimen/size_5dp"
        android:topRightRadius="@dimen/size_5dp"/>
      <solid android:color="@color/header_color"/>
    </shape>
  </item>

  <item>
    <shape android:shape="rectangle">
      <stroke android:color="@color/tc_black38"
        android:width="@dimen/size_1dp"/>
      <corners android:bottomRightRadius="@dimen/size_5dp"
        android:topRightRadius="@dimen/size_5dp"/>
      <solid android:color="@color/transparent"/>
    </shape>
  </item>
</selector>