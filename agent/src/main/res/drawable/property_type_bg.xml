<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/tc_black57" />
                </shape>
            </item>
            <item
                android:bottom="@dimen/margin_0.2"
                android:left="@dimen/margin_0.2"
                android:right="@dimen/margin_0.2"
                android:top="@dimen/margin_0.2">
                <shape android:shape="rectangle">
                    <solid android:color="@color/header_color" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/tc_black57" />
                </shape>
            </item>
            <item
                android:top="@dimen/margin_0.2"
                android:bottom="@dimen/margin_0.2"
                android:left="@dimen/margin_0.2"
                android:right="@dimen/margin_0.2">
                <shape android:shape="rectangle">
                    <solid android:color="@color/header_color" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/tc_black57" />
                </shape>
            </item>
            <item
                android:bottom="@dimen/margin_0.2"
                android:left="@dimen/margin_0.2"
                android:right="@dimen/margin_0.2"
                android:top="@dimen/margin_0.2">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>