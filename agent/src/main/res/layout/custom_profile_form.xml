<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/padding_10dp"
    android:paddingStart="@dimen/padding_16dp"
    android:paddingEnd="@dimen/padding_16dp"
    android:background="@color/white"
    android:id="@+id/profile_form_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/margin_10dp">

        <TextView
            android:id="@+id/form_title_tv"
            android:layout_weight="1.2"
            android:layout_width="0dp"
            style="@style/TextViewBase.TitleText"/>

        <TextView
            android:id="@+id/form_content_tv"
            android:layout_weight="2.5"
            android:background="@android:color/transparent"
            android:textColor="@color/tc_black38"
            android:ellipsize="end"
            android:lines="1"
            android:layout_width="0dp"
            style="@style/TextViewBase.TitleText"/>

        <EditText
            android:visibility="gone"
            android:id="@+id/form_content_et"
            android:layout_weight="2.5"
            android:background="@android:color/transparent"
            android:textColor="@color/tc_black38"
            android:ellipsize="end"
            android:lines="1"
            android:layout_width="0dp"
            android:imeOptions="actionDone"
            style="@style/TextViewBase.TitleText" />

        <ImageView
            android:visibility="invisible"
            android:id="@+id/form_action_iv"
            android:layout_width="@dimen/size_24dp"
            android:layout_height="@dimen/size_24dp" />

    </LinearLayout>

    <View
        style="@style/DivideLine.LightGray"/>
    
</LinearLayout>