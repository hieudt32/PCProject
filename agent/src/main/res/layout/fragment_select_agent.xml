<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->

    <customview.CustomHeaderView
        android:id="@+id/header_select_agent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:custom_header_left_action_ic_src="@drawable/ic_back"
        app:custom_header_title="@string/select_agent"/>

    <EditText
        android:id="@+id/search_agent_et"
        style="@style/EditTextBase.CreateProperty"
        android:hint="@string/search_name_or_cea"
        android:imeOptions="actionSearch"/>

    <com.malinskiy.superrecyclerview.SuperRecyclerView
        android:id="@+id/select_agent_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
