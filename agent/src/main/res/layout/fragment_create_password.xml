<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/create_password_layout"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  android:orientation="vertical">

  <customview.CustomHeaderView
    android:id="@+id/custom_header_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:custom_header_left_action_ic_src="@drawable/ic_back"
    app:custom_header_title="@string/create_password"/>

  <TextView
    style="@style/TextViewBase"
    android:layout_marginEnd="@dimen/margin_20dp"
    android:layout_marginStart="@dimen/margin_20dp"
    android:layout_marginTop="@dimen/margin_15dp"
    android:text="@string/create_password_des"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_44dp"
    android:layout_marginStart="@dimen/margin_15dp"
    android:orientation="horizontal">

    <TextView
      style="@style/TextViewBase.ProfileTitle"
      android:layout_width="@dimen/size_91dp"
      android:text="@string/email"/>

    <EditText
      android:id="@+id/email_et"
      style="@style/EditText"
      android:layout_gravity="center_vertical"
      android:layout_weight="1"
      android:background="@android:color/transparent"
      android:gravity="center_vertical"
      android:hint="@string/email_hint"
      android:inputType="textEmailAddress"
      android:padding="0dp"
      android:textSize="@dimen/ts_16sp"/>
  </LinearLayout>

  <View
    style="@style/DivideLine.LightGray"
    android:layout_marginStart="@dimen/margin_15dp"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_44dp"
    android:layout_marginStart="@dimen/margin_15dp"
    android:orientation="horizontal">

    <TextView
      style="@style/TextViewBase.ProfileTitle"
      android:layout_width="@dimen/size_91dp"
      android:text="@string/password"/>

    <EditText
      android:id="@+id/password_et"
      style="@style/EditText"
      android:layout_gravity="center_vertical"
      android:layout_weight="1"
      android:background="@android:color/transparent"
      android:gravity="center_vertical"
      android:hint="@string/phone_hint"
      android:inputType="textPassword"
      android:padding="0dp"
      android:textSize="@dimen/ts_16sp"/>
  </LinearLayout>

  <View
    style="@style/DivideLine.LightGray"
    android:layout_marginStart="@dimen/margin_15dp"/>

  <customview.CustomButton
    android:id="@+id/create_cb"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_48dp"
    android:layout_marginTop="@dimen/margin_10dp"
    android:background="@color/button_color"
    app:custom_button_text="@string/create"/>

  <TextView
    style="@style/TextViewBase"
    android:layout_width="match_parent"
    android:layout_marginEnd="@dimen/margin_20dp"
    android:layout_marginStart="@dimen/margin_20dp"
    android:layout_marginTop="@dimen/margin_15dp"
    android:gravity="center"
    android:text="@string/create_password_des2"/>
</LinearLayout>
