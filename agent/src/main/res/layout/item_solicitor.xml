<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_item_property"
              android:orientation="vertical"
              android:paddingBottom="@dimen/padding_16dp">

  <View
    style="@style/DivideLine.LightGray"
    android:layout_marginBottom="@dimen/margin_16dp"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="@dimen/padding_16dp"
    android:paddingEnd="@dimen/padding_16dp">

    <LinearLayout
      android:layout_weight="1"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <TextView
        android:id="@+id/item_solicitor_name_tv"
        style="@style/TextViewBase.NameItemView"
        android:text="Solicitor Name"
        android:textSize="@dimen/ts_16sp"
        android:textStyle="normal"/>

      <TextView
        android:id="@+id/item_solicitor_address_tv"
        style="@style/TextViewBase.ItemView"
        android:layout_marginTop="@dimen/margin_6dp"
        android:text="Solicitor Address"
        android:textSize="@dimen/ts_14sp"/>

    </LinearLayout>

    <ImageView
      android:id="@+id/item_solicitor_selected_iv"
      android:background="@drawable/bg_radio_selector"
      android:layout_gravity="center_vertical"
      android:layout_marginStart="@dimen/margin_6dp"
      android:layout_width="@dimen/size_24dp"
      android:layout_height="@dimen/size_24dp"/>

  </LinearLayout>

</LinearLayout>