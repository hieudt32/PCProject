<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/item_summary"
  android:layout_width="match_parent"
  android:layout_height="@dimen/size_80dp"
  android:background="@color/white"
  android:orientation="horizontal">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_16dp"
    android:paddingEnd="@dimen/padding_24dp"
    android:paddingStart="@dimen/padding_24dp"
    android:paddingTop="@dimen/padding_16dp">

    <TextView
      android:id="@+id/title_summary_item_tv"
      style="@style/TextViewBase.Description"
      android:gravity="center_vertical"
      android:maxLines="1"
      android:text="@string/loading"/>

    <TextView
      android:id="@+id/content_summary_item_tv"
      style="@style/TextViewBase.TitleText"
      android:layout_marginTop="@dimen/margin_6dp"
      android:ellipsize="end"
      android:maxLines="1"/>
  </LinearLayout>

  <ImageView
    android:id="@+id/summary_second_iv"
    style="@style/ImageViewNext"
    android:layout_gravity="center_vertical"
    android:layout_marginEnd="@dimen/margin_32dp"
    android:visibility="gone"/>

  <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical">

    <ImageView
      android:id="@+id/next_summary_iv"
      android:layout_width="@dimen/size_24dp"
      android:layout_height="@dimen/size_24dp"
      android:layout_marginEnd="@dimen/margin_24dp"
      android:src="@drawable/ic_next"/>

    <ImageView
      android:id="@+id/summary_status_iv"
      android:layout_width="@dimen/size_12dp"
      android:layout_height="@dimen/size_12dp"
      android:layout_centerInParent="true"
      android:layout_marginEnd="@dimen/margin_24dp"
      android:visibility="gone"/>

  </RelativeLayout>


</LinearLayout>