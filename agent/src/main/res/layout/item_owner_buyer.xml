<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/item_owner_buyer"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginBottom="@dimen/margin_8dp"
  android:background="@color/white"
  android:orientation="horizontal">

  <com.facebook.drawee.view.SimpleDraweeView
    android:id="@+id/user_avatar_iv"
    android:layout_width="@dimen/size_56dp"
    android:layout_height="@dimen/size_56dp"
    android:layout_marginBottom="@dimen/margin_16dp"
    android:layout_marginEnd="@dimen/margin_16dp"
    android:layout_marginStart="@dimen/margin_24dp"
    android:layout_marginTop="@dimen/margin_16dp"
    app:actualImageScaleType="centerCrop"
    app:placeholderImage="@drawable/ic_avatar"
    app:placeholderImageScaleType="centerCrop"
    app:roundAsCircle="true"/>

  <LinearLayout
    android:layout_width="@dimen/size_0dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_weight="1"
    android:orientation="vertical">

    <TextView
      android:id="@+id/user_name_tv"
      style="@style/TextViewBase.ProcessTrackerTitle"
      android:text="@string/henry_smith"/>

    <TextView
      android:id="@+id/user_type_tv"
      style="@style/TextViewBase.ProcessTrackerStatus"
      android:text="@string/owner"/>

  </LinearLayout>

  <View
    android:id="@+id/next_iv"
    android:layout_width="@dimen/size_24dp"
    android:layout_height="@dimen/size_24dp"
    android:layout_gravity="center_vertical"
    android:layout_marginEnd="@dimen/margin_24dp"
    android:background="@drawable/ic_next"/>

</LinearLayout>