<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewBase.ContentDialog">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/ts_13sp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="divideLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_1dp</item>
        <item name="android:background">@color/gray</item>
    </style>
    <style name="TextViewBase.TitleDialogButton">
        <item name="android:textSize">@dimen/ts_17sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:padding">@dimen/padding_12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HeaderIcon">
        <item name="android:paddingTop">@dimen/padding_12dp</item>
        <item name="android:paddingBottom">@dimen/padding_12dp</item>
        <item name="android:layout_width">?android:actionBarSize</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="ActionDialogTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/ts_20sp</item>
        <item name="android:textColor">@color/dialog_action_text_color</item>
        <item name="android:background">@color/dialog_bg_color</item>
    </style>

    <style name="OTPItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

</resources>