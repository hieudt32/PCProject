<?xml version="1.0" encoding="utf-8"?>
<resources>
  <declare-styleable name="CustomFontTextView">
    <attr name="font" format="string"/>
    <attr name="textStyle" format="integer"/>
  </declare-styleable>

  <declare-styleable name="CircleImageView">
    <attr name="civ_border_width" format="dimension"/>
    <attr name="civ_border_color" format="color"/>
    <attr name="civ_border_overlay" format="boolean"/>
    <attr name="civ_fill_color" format="color"/>
  </declare-styleable>

  <declare-styleable name="CustomProgressView">
    <attr name="textLabel" format="string"/>
  </declare-styleable>

  <declare-styleable name="TextViewIconLeft">
    <attr name="til_text" format="string"/>
    <attr name="til_icon_left" format="reference"/>
    <attr name="til_text_color" format="color"/>
  </declare-styleable>

  <declare-styleable name="HeaderView">
    <attr name="hdv_title" format="string"/>
    <attr name="hdv_icon" format="reference"/>
    <attr name="hdv_text_color" format="color"/>
    <attr name="hdv_bg_color" format="color"/>
    <attr name="hdv_right_text" format="string|reference"/>
  </declare-styleable>

  <declare-styleable name="BookingInfoView">
    <attr name="biv_title" format="string"/>
    <attr name="biv_content" format="string"/>
    <attr name="biv_title_text_color" format="color"/>
    <attr name="biv_content_text_color" format="color"/>
  </declare-styleable>

  <declare-styleable name="CustomHeaderLayout">
    <attr name="chl_left_icon" format="reference"/>
    <attr name="chl_left_icon_2" format="reference"/>
    <attr name="chl_right_icon" format="reference"/>
    <attr name="chl_bg_color" format="color"/>
    <attr name="chl_text_color" format="color"/>
    <attr name="chl_left_text" format="string"/>
    <attr name="chl_center_text" format="string"/>
    <attr name="chl_right_text" format="string"/>
  </declare-styleable>

  <declare-styleable name="CustomHeaderView">
    <attr name="custom_header_title" format="string"/>
    <attr name="custom_header_left_text" format="string"/>
    <attr name="custom_header_right_text" format="string"/>
    <attr name="custom_header_action_ic_src" format="reference"/>
    <attr name="custom_header_right_action_ic_src" format="reference"/>
    <attr name="custom_header_left_action_ic_src" format="reference"/>
  </declare-styleable>

  <declare-styleable name="CustomButton">
    <attr name="custom_button_text" format="string"/>
  </declare-styleable>

  <declare-styleable name="CustomPropertyDetails">
    <attr name="custom_property_details_title" format="string"/>
    <attr name="custom_property_details_value" format="string"/>
    <attr name="custom_property_details_color" format="color"/>
  </declare-styleable>

  <declare-styleable name="CustomCreateOtp">
    <attr name="custom_create_otp_text" format="string"/>
    <attr name="custom_create_otp_text_hint" format="string"/>
    <attr name="custom_text_start_otp" format="string"/>
    <attr name="custom_text_end_otp" format="string"/>
  </declare-styleable>


</resources>