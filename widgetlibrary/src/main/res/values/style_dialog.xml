<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="DialogAnimation">
    <item name="android:windowEnterAnimation">@anim/push_up_in</item>
    <item name="android:windowExitAnimation">@anim/push_up_out</item>
  </style>

  <style name="Dialog"></style>

  <style name="Dialog.Layout">
    <item name="android:background">@color/bg_dialog_translucent</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
  </style>

  <style name="Dialog.Content">
    <item name="android:layout_marginLeft">@dimen/dialog_margin</item>
    <item name="android:layout_marginRight">@dimen/dialog_margin</item>
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
    <item name="android:focusableInTouchMode">true</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:padding">@dimen/padding_large</item>
  </style>

  <style name="Dialog.Button">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">center</item>
    <item name="android:padding">@dimen/button_padding</item>
  </style>

  <style name="Dialog.Icon">
    <item name="android:layout_width">@dimen/dialog_icon_size</item>
    <item name="android:layout_height">@dimen/dialog_icon_size</item>
  </style>

  <style name="Dialog.Icon.Close">
    <item name="android:src">@drawable/ic_close_dialog</item>
    <item name="android:layout_centerHorizontal">true</item>
    <item name="android:layout_alignParentBottom">true</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_marginBottom">@dimen/dialog_margin</item>
  </style>

  <style name="Dialog.Icon.Close.Top">
    <item name="android:src">@drawable/ic_close_dialog</item>
    <item name="android:layout_centerHorizontal">true</item>
    <item name="android:layout_alignParentTop">true</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_marginBottom">@dimen/dialog_margin</item>
  </style>

  <style name="Dialog.Text">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="Dialog.Text.Title">
    <item name="android:textSize">@dimen/ts_title</item>
    <item name="android:textColor">@color/common_pink</item>
    <item name="android:gravity">center</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="Dialog.Text.Message">
    <item name="android:textSize">@dimen/ts_big</item>
    <item name="android:textColor">@color/semi_black</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="Dialog.Text.Name">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/semi_black</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">@dimen/ts_big</item>
    <item name="android:padding">12dp</item>
    <item name="android:background">@drawable/bg_dialog_edittext</item>
  </style>

  <style name="Dialog.Button.Grey">
    <item name="android:textSize">@dimen/ts_big</item>
    <item name="android:textColor">@color/bt_grey</item>
    <item name="android:background">@drawable/bt_round_grey_rectangle</item>
  </style>

  <style name="Dialog.Button.Pink">
    <item name="android:textSize">@dimen/ts_big</item>
    <item name="android:textColor">@drawable/commont_text_selector_pink</item>
    <item name="android:background">@drawable/bt_round_pink_rectangle</item>
  </style>

  <style name="Dialog.EditText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">80dp</item>
    <item name="android:background">@drawable/bg_dialog_edittext</item>
    <item name="android:padding">@dimen/padding_normal</item>
    <item name="android:textSize">@dimen/ts_big</item>
  </style>

  <style name="SeekBar">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:maxHeight">2dp</item>
    <item name="android:minHeight">2dp</item>
    <item name="android:thumb">@drawable/thumb_progress_white</item>
    <item name="android:progressDrawable">@drawable/bg_seekbar_drawable</item>
  </style>

  <style name="SeekBar.Video">
    <item name="android:thumb">@drawable/thumb_progress_pink</item>
  </style>

  <style name="TextViewBase.TitleDialog">
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">@dimen/ts_17sp</item>
    <item name="android:textStyle">bold</item>
  </style>


  <style name="TextViewBase.MessengerDialog">
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">@dimen/ts_13sp</item>
  </style>

  <style name="ButtonBase.ButtonDialog">
    <item name="android:textColor">@color/text_btn_dialog</item>
    <item name="android:textSize">@dimen/ts_17sp</item>
    <item name="android:textStyle">bold</item>
  </style>

</resources>