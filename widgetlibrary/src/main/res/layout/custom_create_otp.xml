<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/size_80dp"
              android:background="@color/white"
              android:orientation="vertical">

  <TextView
    android:id="@+id/title_create_otp_tv"
    style="@style/TextViewBase.TitleCreateOtp"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_40dp"
    android:gravity="bottom"
    android:lines="1"
    android:paddingBottom="@dimen/margin_4dp"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_40dp"
    android:layout_marginLeft="@dimen/margin_24dp"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/text_start_create_otp"
      style="@style/TextViewBase.InputCreateOtp"
      android:layout_height="match_parent"
      android:gravity="top"/>

    <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent">

      <EditText
        android:id="@+id/input_create_otp_tv"
        style="@style/TextViewBase.InputCreateOtp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_40dp"
        android:background="@color/white"
        android:minWidth="@dimen/size_12dp"
        android:gravity="top"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLines="1"/>

      <TextView
        android:id="@+id/select_date_tv"
        style="@style/TextViewBase.InputCreateOtp"
        android:gravity="top"
        android:text="@string/date_hdb_otp_timestamp"
        android:visibility="gone"/>
    </RelativeLayout>

    <TextView
      android:id="@+id/text_end_create_otp"
      style="@style/TextViewBase.InputCreateOtp"
      android:layout_height="match_parent"
      android:layout_width="match_parent"
      android:layout_weight="1"
      android:gravity="top"
      android:visibility="gone"/>
  </LinearLayout>
</LinearLayout>