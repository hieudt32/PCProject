<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="@dimen/size_88dp"
  android:orientation="vertical">

  <TextView
    android:id="@+id/title_property_details_tv"
    style="@style/TextViewBase.TitleText"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:gravity="center" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_44dp"
    android:orientation="horizontal">

    <ImageView
      android:id="@+id/minus_property_details_iv"
      android:layout_width="@dimen/size_44dp"
      android:layout_height="@dimen/size_44dp"
      android:background="@color/greyish"
      android:src="@drawable/ic_minus" />

    <TextView
      android:id="@+id/value_property_details_tv"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:background="@color/white"
      android:gravity="center"
      android:textSize="@dimen/ts_18sp" />

    <ImageView
      android:id="@+id/add_property_details_iv"
      android:layout_width="@dimen/size_44dp"
      android:layout_height="@dimen/size_44dp"
      android:background="@color/greyish"
      android:src="@drawable/ic_add" />


  </LinearLayout>

  <View
    style="@style/DivideLine.Grayish" />
</LinearLayout>